<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:paddingTop="@dimen/twelve_dp"
              android:layout_marginTop="@dimen/twelve_dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/twelve_dp"
        android:paddingRight="@dimen/twelve_dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/fifteen_dp"
            android:id="@+id/order_status"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_med"
            android:textSize="@dimen/fifteen_dp"
            android:layout_marginLeft="@dimen/eight_dp"
            android:id="@+id/order_number"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_light"
        android:id="@+id/order_placing_date"
        android:layout_marginTop="@dimen/four_dp"
        android:textSize="@dimen/thirteen_dp"
        android:paddingLeft="@dimen/twelve_dp"
        android:paddingRight="@dimen/twelve_dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_light"
        android:id="@+id/order_mini_info"
        android:layout_marginTop="@dimen/four_dp"
        android:textSize="@dimen/thirteen_dp"
        android:paddingLeft="@dimen/twelve_dp"
        android:paddingRight="@dimen/twelve_dp"
        android:paddingBottom="@dimen/twelve_dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fourteen_dp"
        android:textStyle="bold"
        android:padding="@dimen/fourteen_dp"
        android:layout_marginTop="@dimen/twelve_dp"
        android:text="@string/view_detail"
        android:textColor="@color/white"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/colorPrimary"/>

</LinearLayout>